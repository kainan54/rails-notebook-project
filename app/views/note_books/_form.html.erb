<%= form_with(model: note_book) do |form| %>
  <% if note_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note_book.errors.count, "error") %> prohibited this note_book from being saved:</h2>

      <ul>
        <% note_book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  
  <%= form.fields_for :sections do |section| %>
        <%= render 'section_fields', f: section %>
  <% end %>

  <div class="actions">
    <%= link_to_add_association 'Add a section', form, :sections %>
    <%= form.submit editMode ? 'Update Outline' : 'Create Outline' %><br>
    <%= link_to 'Cancel', note_books_browse_path(1) %>
  </div>
<% end %>
